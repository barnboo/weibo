<%- include meta.ejs %>
<%- include header.ejs %>
<canvas id="Mycanvas" style=" background-color: #f7fafc;position: absolute;z-index: -1;overflow: hidden;"></canvas>
<div class="container summary">
    <%- include alert.ejs %>
    <div class="reg-content">
        <h3 class="reg-title text-center">用户注册</h3>
        <form class="form-horizontal" method="post">
            <div class="form-group">
                <label for="usernick" class="col-sm-2 control-label">用户昵称</label>
                <div class="col-sm-10">
                    <input value="1号" type="text" class="form-control" id="usernick" name="usernick" placeholder="汉字、英文、数字组合，注册后不可修改" autocomplete="off">
                </div>
            </div>
            <div class="form-group">
                <label for="uname" class="col-sm-2 control-label">登录账号</label>
                <div class="col-sm-10">
                    <input type="text" value="yhy" class="form-control" id="uname" name="useraccount" placeholder="常用手机号码或电子邮箱" autocomplete="off">
                </div>
            </div>
            <div class="form-group">
                <label for="upwd" class="col-sm-2 control-label">登录密码</label>
                <div class="col-sm-10">
                    <input type="password" value="123" class="form-control" id="upwd" name="userpwd" placeholder="6-20位字母、数字、特殊字符组合">
                </div>
            </div>
            <div class="form-group">
                <label for="repwd" class="col-sm-2 control-label">确认密码</label>
                <div class="col-sm-10">
                    <input type="password" value="123" class="form-control" id="repwd" name="pwdrepeat" placeholder="重新输入上面的密码">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="pull-left">
                        <button type="submit" class="btn btn-primary" id="btn-reg">注册</button>
                    </div>
                    <div class="pull-left">
                        <p class="agreement-tip">点击「注册」按钮，即代表你同意<a href="" target="_blank">《协议》</a></p>
                    </div>
                </div>
            </div>
        </form>
    </div>
<%- include footer.ejs %>
</div>
<script src="js/plugin/bg.js"></script>