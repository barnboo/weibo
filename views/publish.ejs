<%- include meta.ejs %>
<%- include header.ejs %>
<div class="container">
    <%- include alert.ejs %>
    <div class="login-content">
        <h3 class="reg-title text-center">写美文
            <small>草稿自动保存</small>
        </h3>
        <form class="form-horizontal" method="post">
            <div class="form-group">
                <label for="title" class="col-sm-2 control-label">请输入标题</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="title" name="title" autocomplete="off">
                </div>
            </div>
            <div class="form-group">
                <label for="content" class="col-sm-2 control-label">请输入正文</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="content" name="content">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary" id="btn-publish">发布</button>
                </div>
            </div>
        </form>
    </div>
    <%- include popTip.ejs %>
    <%- include footer.ejs %>
</div>