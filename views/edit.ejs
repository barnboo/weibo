<%- include meta.ejs %>
<link rel="stylesheet" href="/css/edit.css">
<%- include header.ejs %>
<% if(user){ %>
<div class="container">
    <%- include alert.ejs %>
    <div class="user-edit-card">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <!--个人信息编辑头部-->
                <div class="pro-header">
                    <div class="user-cover-edit">
                        <button class="btn btn-default user-cover-edit-btn" type="button">
                            <svg style="vertical-align: middle" viewBox="0 0 20 16" width="14" height="16" aria-hidden="true" style="height: 16px; width: 14px;"><title></title><g><path d="M18.094 2H15s-1-2-2-2H7C6 0 5 2 5 2H2C0 2 0 3.967 0 3.967V14c0 2 2.036 2 2.036 2H17c3 0 3-1.983 3-1.983V4c0-2-1.906-2-1.906-2zM10 12c-1.933 0-3.5-1.567-3.5-3.5S8.067 5 10 5s3.5 1.567 3.5 3.5S11.933 12 10 12zm0 1.5c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm7.5-8c-.552 0-1-.448-1-1s.448-1 1-1 1 .448 1 1-.448 1-1 1z" fill-rule="evenodd"></path></g></svg>
                            编辑封面图片
                        </button>
                        <div class="user-cover">
                            <img class="UserCover-image" src="/images/banner1.jpg" alt="用户封面" style="width:100%;height: auto;max-height: 300px">
                        </div>
                        <input type="file" accept="image/png,image/jpeg" style="display: none;">
                    </div>
                </div>

                <!--个人信息编辑主体部分-->
                <div class="pro-content">
                    <div class="row">
                        <div class="col-sm-2 col-md-2">
                            <!--用户头像部分-->
                            <div class="UserAvatarEditor ProfileHeader-avatar">
                                <div class="UserAvatar">
                                    <img class="Avatar Avatar--large UserAvatar-inner" width="160" height="160" src="/images/head1.jpg">
                                </div>
                                <div class="Mask UserAvatarEditor-mask">
                                    <div class="Mask-mask Mask-mask--black UserAvatarEditor-maskInner">

                                    </div>
                                    <div class="Mask-content">
                                        <svg viewBox="0 0 20 16" class="Icon UserAvatarEditor-cameraIcon Icon--camera" width="30" height="27" aria-hidden="true" style="height: 27px; width: 30px;"><title></title><g><path d="M18.094 2H15s-1-2-2-2H7C6 0 5 2 5 2H2C0 2 0 3.967 0 3.967V14c0 2 2.036 2 2.036 2H17c3 0 3-1.983 3-1.983V4c0-2-1.906-2-1.906-2zM10 12c-1.933 0-3.5-1.567-3.5-3.5S8.067 5 10 5s3.5 1.567 3.5 3.5S11.933 12 10 12zm0 1.5c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm7.5-8c-.552 0-1-.448-1-1s.448-1 1-1 1 .448 1 1-.448 1-1 1z" fill-rule="evenodd"></path></g></svg>
                                        <div class="UserAvatarEditor-maskInnerText">修改我的头像</div>
                                    </div>
                                </div>
                                <input type="file" accept="image/png,image/jpeg" style="display: none;">
                            </div>
                        </div>

                        <!--用户资料部分-->
                        <div class="col-sm-9 col-md-9">
                            456
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include footer.ejs %>
</div>
<% } %>
<%- include posts.ejs %><!--替换了书中的partial函数-->
